<div class="accounts_bg">
  <div class="container">
    <div class="error">
      {{error}}
    </div>
    <form action="/accounts/signIn" method="post">
      <div class="title">Login</div>
      <div class="input-box">
        <input
          type="text"
          required="true"
          name="email"
          placeholder="Enter Your Email"
        />
        <div class="underline"></div>
      </div>

      <div class="input-box">
        <input
          type="password"
          name="password"
          placeholder="Enter Your Password"
          required
        />
        <div class="underline"></div>
      </div>
      <div style="left:0; margin-top:2rem;"><span>Do not have an account?
        </span><a
          href="/accounts/register"
          style="text-decoration:none;"
        >Register</a></div>
      <button>Submit</button>
    </form>
  </div>
</div>